{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:read-all",
    "fs:read-dirs",
    "fs:read-files",
    "fs:read-meta",
    "fs:write-all",
    "fs:write-files",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "os:default"
  ]
}